---
import registry from '../data/registry.json';
const modelCount = registry.items.length;

// The three pillars ‚Äî the core story
const pillars = [
  {
    step: "1",
    verb: "Pull",
    title: "Install any model",
    description: "One command gets checkpoints, LoRAs, VAEs, text encoders ‚Äî with automatic dependency resolution. Content-addressed storage means zero duplicates across tools.",
    terminal: [
      { type: 'cmd', text: '$ mods model pull flux-dev' },
      { type: 'out', text: '‚Üí Resolving dependencies...' },
      { type: 'out', text: '  ‚Üì FLUX.1 Dev (diffusion_model) [fp16] 23.80 GiB' },
      { type: 'out', text: '  ‚Üì CLIP-L (text_encoder) 246.14 MiB' },
      { type: 'out', text: '  ‚Üì T5-XXL (text_encoder) [fp16] 9.79 GiB' },
      { type: 'out', text: '  ‚Üì FLUX VAE (vae) 167.67 MiB' },
      { type: 'out', text: '  ‚úì Installed flux-dev + 3 deps' },
    ],
    color: "#7c3aed",
  },
  {
    step: "2",
    verb: "Train",
    title: "Train custom LoRAs",
    description: "Point mods at a folder of images and it handles the rest ‚Äî managed Python runtime, ai-toolkit, opinionated presets. One command from photos to LoRA.",
    terminal: [
      { type: 'cmd', text: '$ mods dataset create products --from ~/photos/' },
      { type: 'out', text: '  ‚úì 24 images ‚Üí ~/.mods/datasets/products/' },
      { type: 'cmd', text: '$ mods train --dataset products --base flux-dev --name product-v1' },
      { type: 'out', text: '  ‚ñ∏ Step 1600/2000  loss=0.042  lr=1.0e-4' },
      { type: 'out', text: '  ‚úì Saved product-v1.safetensors (86 MiB)' },
    ],
    color: "#f59e0b",
  },
  {
    step: "3",
    verb: "Generate",
    title: "Generate images",
    description: "Run inference straight from the terminal. LoRA loading, size presets, seed control, batch generation ‚Äî all built in. No notebooks, no node graphs.",
    terminal: [
      { type: 'cmd', text: '$ mods generate "a photo of OHWX on marble" --lora product-v1' },
      { type: 'out', text: '  ‚ñ∏ Loading flux-dev + product-v1...' },
      { type: 'out', text: '  ‚ñ∏ Generating ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà 28/28 steps' },
      { type: 'out', text: '  ‚úì Generated 1 image:' },
      { type: 'out', text: '    ~/.mods/outputs/2026-02-26/001.png' },
    ],
    color: "#22c55e",
  },
];

// Technical differentiators
const techFeatures = [
  {
    icon: "üîó",
    title: "Content-Addressed Storage",
    description: "Models stored by hash, symlinked into ComfyUI, A1111, or any tool. One file on disk, used everywhere."
  },
  {
    icon: "‚ö°",
    title: "Smart VRAM Selection",
    description: "Detects your GPU and picks the right fp16/fp8/GGUF variant automatically. Override anytime."
  },
  {
    icon: "üîÑ",
    title: "Dependency Resolution",
    description: "Install a checkpoint ‚Äî the VAE, text encoders, and ControlNets come along. Transitive deps handled."
  },
  {
    icon: "üêç",
    title: "Managed Python Runtime",
    description: "No venv juggling. Mods manages its own Python 3.11 + CUDA + torch stack. Isolated from your system."
  },
  {
    icon: "ü©∫",
    title: "Health Checks",
    description: "mods doctor finds broken symlinks, missing deps, hash mismatches, and corrupt files in seconds."
  },
  {
    icon: "üîç",
    title: `${modelCount}+ Model Registry`,
    description: "Curated, versioned manifests with variant selection. Search by type, architecture, or tags."
  },
];

// Featured model families ‚Äî hero cards
const families = [
  {
    name: "FLUX",
    tagline: "State-of-the-art image generation",
    color: "#7c3aed",
    models: ["FLUX.2 Dev", "FLUX.2 Klein 4B", "FLUX.2 Klein 9B", "FLUX.1 Kontext Dev", "FLUX.1 Dev", "FLUX.1 Schnell", "FLUX Fill Dev", "FLUX Canny Dev", "FLUX Redux Dev"],
    install: "mods model pull flux2-dev",
  },
  {
    name: "Qwen",
    tagline: "Multimodal editing & generation",
    color: "#3b82f6",
    models: ["Qwen Image", "Qwen Image Edit", "Qwen Image Edit Lightning LoRA"],
    install: "mods model pull qwen-image",
  },
  {
    name: "Wan",
    tagline: "Video generation & editing",
    color: "#14b8a6",
    models: ["Wan 2.1 VACE 14B", "Wan 2.2 TI2V 5B", "Wan 2.2 T2V 14B", "Wan 2.2 I2V 14B"],
    install: "mods model pull wan21-vace-14b",
  },
  {
    name: "LTX-Video",
    tagline: "Fast video generation",
    color: "#f59e0b",
    models: ["LTX-Video 2B", "LTX-Video 13B", "LTX-2 19B"],
    install: "mods model pull ltx-video-2b",
  },
];

// Other notable models
const moreModels = [
  { name: "SDXL Base 1.0", type: "checkpoint" },
  { name: "SD 1.5", type: "checkpoint" },
  { name: "Z-Image Turbo", type: "diffusion_model" },
  { name: "ControlNets", type: "controlnet" },
  { name: "IP-Adapters", type: "ipadapter" },
  { name: "4x UltraSharp", type: "upscaler" },
  { name: "BiRefNet", type: "segmentation" },
  { name: "LCM LoRAs", type: "lora" },
];

const typeColors: Record<string, string> = {
  checkpoint: "#3b82f6",
  diffusion_model: "#8b5cf6",
  text_encoder: "#06b6d4",
  lora: "#f59e0b",
  controlnet: "#10b981",
  ipadapter: "#ec4899",
  upscaler: "#f97316",
  vae: "#6366f1",
  segmentation: "#14b8a6",
};
