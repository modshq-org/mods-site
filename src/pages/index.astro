  <script>
    document.getElementById('copy-install-btn').addEventListener('click', function () {
      var btn = this;
      var cmd = 'curl -fsSL https://raw.githubusercontent.com/modshq-org/mods/main/install.sh | sh';
      if (navigator.clipboard && navigator.clipboard.writeText) {
        navigator.clipboard.writeText(cmd).then(function () {
          btn.textContent = 'Copied!';
          setTimeout(function () { btn.textContent = 'Copy Install Command'; }, 2000);
        }).catch(function () {
          fallbackCopy(cmd, btn);
        });
      } else {
        fallbackCopy(cmd, btn);
      }
      function fallbackCopy(text, el) {
        var ta = document.createElement('textarea');
        ta.value = text;
        ta.style.position = 'fixed';
        ta.style.opacity = '0';
        document.body.appendChild(ta);
        ta.select();
        document.execCommand('copy');
        document.body.removeChild(ta);
        el.textContent = 'Copied!';
        setTimeout(function () { el.textContent = 'Copy Install Command'; }, 2000);
      }
    });
  </script>
